<div id="wrap">
  <div id="header">
    <h1>Add an Employer</h1></div>
    <div id="sidebar">
    <%= simple_form_for(@employer) do |f| %>
          <%= f.input :emp_name %>
          <%= f.input :email %>
          <%= f.input :contact_person %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <%= f.button :submit, "Add an Employer" %>
        </div>
    <% end %>
    </div>
    <br />
  <div id="nav">
    <li><%= link_to "Admin Home Page", session[:admin], method: :get %></li>
  </div>
</div>
